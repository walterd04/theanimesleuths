{
  "name": "animesleuths",
  "version": "1.0.0",
  "description": "Backend infrastructure for theanimesleuths.com domain and The Anime Sleuths YouTube.",
  "scripts": {
    "build": "npm run build-ts && npm run build-ts && npm run lint",
    "build-ts": "tsc",
    "debug": "npm run build && npm run watch-debug",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose --passWithNoTests",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "author": "Devin Walter",
  "private": true,
  "dependencies": {
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "convict": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-jwt-authz": "^2.4.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.11.0",
    "mongoose": "^5.10.10",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.2.1",
    "@types/connect-mongo": "^3.1.3",
    "@types/cors": "^2.8.8",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^7.2.4",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.14.2",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.3"
  }
}
